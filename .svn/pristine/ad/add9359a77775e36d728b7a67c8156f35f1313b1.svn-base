      servicePopData: [
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>真票保证</h3>
                      </div>
                      <div class="low-txt">趣票所出售的票均为真票，请放心购买</div>`,
          class: "update-class"
        },
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>在线选座</h3>
                      </div>
                      <div class="low-txt">该演出支持在线选座</div>`,
          class: "update-class"
        }
      ],
      shouldKnowData: [
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>演出时间</h3>
                      </div>
                      <div class="low-txt">2019-05-20 周六 14:00</div>`,
          class: "update-class"
        },
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>演出场馆</h3>
                      </div>
                      <div class="low-txt">华润深圳湾体育中心</div>`,
          class: "update-class"
        },
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>演出时长</h3>
                      </div>
                      <div class="low-txt">约120分钟（以现场为准）</div>`,
          class: "update-class"
        },
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>儿童入场提示</h3>
                      </div>
                      <div class="low-txt">1.2米以下儿童谢绝入场（儿童项目除外），1.2米以上儿童需持
票入场</div>`,
          class: "update-class"
        },
        {
          content: `<div class="l-tt">
                        <div class="dot"></div>
                        <h3>禁止事项</h3>
                      </div>
                      <div class="low-txt">由于安保与版权的原因，大多数演出、展览及比赛场馆</div>`,
          class: "update-class"
        }
      ],
      day: 0,
      hr: 0,
      min: 0,
      sec: 0,
      endTime: "2019-06-15 10:40:00"
    };
  },
  methods: {
    ruleToast() {
      this.toast("暂无规则");
    },
    countdown() {
      //ios时间戳兼容
      let endTime = Date.parse(this.endTime.replace(/-/g, "/"));
      const end = new Date(endTime).getTime();
      const now = new Date().getTime();
      const msec = end - now;
      let day = parseInt(msec / 1000 / 60 / 60 / 24);
      let hr = parseInt(msec / 1000 / 60 / 60) % 24;
      let min = parseInt((msec / 1000 / 60) % 60);
      let sec = parseInt((msec / 1000) % 60);
      this.day = day;
      this.hr = hr > 9 ? hr : "0" + hr;
      this.min = min > 9 ? min : "0" + min;
      this.sec = sec > 9 ? sec : "0" + sec;
      const that = this;
      setTimeout(function() {
        that.countdown();
      }, 1000);
    },
    showMore() {
      this.showMoreFlag = true;
    },
    showServiceActive() {
      this.$createActionSheet({
        class: "popUp-box",
        cancelTxt: "明白了",
        title: "服务",
        data: this.servicePopData,
        onSelect: (item, index) => {},
        onCancel: () => {}
      }).show();
    },
    showKnowActive() {
      this.$createActionSheet({
        class: "popUp-box",
        cancelTxt: "明白了",
        title: "服务",
        data: this.shouldKnowData,
        onSelect: (item, index) => {},
        onCancel: () => {}
      }).show();
    },
    toBuy(type, id) {
      this.$router.push({
        path: "/selection",
        query: { type: type, itemId: id }
      });
    },
    showPop() {
      this.popShow = true;
    },
    closePop() {
      this.popShow = false;
    }
  },
  mounted() {
    this.countdown();
  }
};
</script>
